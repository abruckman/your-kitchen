<div class="hi">
<div class="panel panel-primary">

<h1 id= "cat_header" class= "individual_category"><%= @category.name %><%=link_to(" << Back to all Categories...", categories_path, class:"btn btn-link")%></h1>

<h1><%=@recipe.title %></h1>
<img class="card-img-top" id="pic-rec" src="<%=@recipe.image_link%>" alt="<%=@recipe.title%>"><br>
Description: <%= @recipe.description %><br>
Prep time: <%= @recipe.prep_time %><br>
Cook time: <%= @recipe.cook_time %><br>
Difficulty: <%= @recipe.difficulty %><br>


<div class="well well-lg">
<h1> Ingredients </h1>
  <% @recipe.ingredients.each do |ingredient| %>
     <div class="individual_ingredient"><%= ingredient.name %> |
     amount: <%= ingredient.amount %>
     <%= ingredient.measurement %>
      <%end%>
</div>
</div>
</div>

<div class="well well-lg">
<h1> Directions </h1>
<ol>
  <% @recipe.directions.each do |direction| %>
     <li><div class="individual_direction"><%= direction.body %>
      <%end%>
</div>
</ol>


