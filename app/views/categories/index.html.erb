<h1>All Categories</h1>

<ul id="categories">
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category),
        class: 'category_name', id: "category_#{category.id}" %>
    </li>
  <% @recipes.each do |recipe| %>
      <% if recipe.category_id == category.id %>
          <%= recipe.title %>
      <% end %>
      <br>
    <% end %>
  <% end %>
</ul>





